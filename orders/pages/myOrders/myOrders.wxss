/* orders/pages/myOrders/myOrders.wxss */
page{
    background:rgba(242,242,242,1);
    font-family:PingFang SC;
    color:#212121;
}
.nav-list{
    display: flex;
    justify-content:space-around;
    align-items: center;
    padding:20rpx;
    padding-bottom: 0rpx;
}
.nav-items{
    display: flex;
    justify-content:center;
    align-items: center;
    font-size:28rpx;
    padding:20rpx 10rpx;
}
.nav-items-active{
    border-bottom:2rpx solid #FF443A;
}
/*订单列表------------------*/
.orderList{
    margin:20rpx;
    background: #fff;
    border-radius:20rpx;
}
.orderList-header{
    padding:28rpx 20rpx;
    display: flex;
    justify-content:space-between;
    align-items: center;
    flex: 1;
}
.goods-detail{
    font-size:26rpx;
}
.trade-status{
    font-size:26rpx;
    color:rgba(255,68,58,1);
}
/*-----商品详情-----*/
.goods-list {
    padding: 0 20rpx;
    width: 100%;
    box-sizing: border-box;
}
.goods-item {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    width: 100%;
    height: 180rpx;
    box-sizing: border-box;
}
.goods-list>.goods-item:last-of-type{
    margin: 0;
}
.goods-img {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
}
.goods-img image {
    width: 180rpx;
    height: 180rpx;
}
.goods-item-right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
    height: 100%;
    margin-left: 20rpx;
    box-sizing: border-box;
}
.goods-item-right-top {
    width: 100%;
    box-sizing: border-box;
}
.goods-specs {
    display: flex;
    align-items: center;
}
.goods-name {
    font-size: 30rpx;
    margin-bottom: 15rpx;
}
.goods-specs {
    font-size: 26rpx;
    color: #777777;

}
.goods-item-right-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.goods-price {
    font-size: 32rpx;
    font-weight: 500;
}
.goods-num {
    font-size: 26rpx;
    color: #777777;
}
.order-total{
    display: flex;
    align-items: center;
    justify-content:flex-end;
    font-size:24rpx;
    padding:28rpx 20rpx;
    border-bottom: 1rpx solid #F2F2F2;
}
.orderList-footer{
    display: flex;
    align-items: center;
    justify-content:flex-end;
    padding-right: 20rpx;
    height: 120rpx;
    box-sizing: border-box;
}
.orderList-btn{
    width:150rpx;
    height:55rpx;
    display: flex;
    align-items: center;
    justify-content:center;
    font-size:26rpx;
    color:#777;
    border:1rpx solid #777;
    border-radius:25rpx;
    margin-left: 20rpx;
    box-sizing: border-box;
}
.orderList-btn-active{
    color:#FF443A;
    border:1rpx solid #FF443A;
}
