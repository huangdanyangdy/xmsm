page {
    background: #f2f2f2;
}

.wrap {
    width: 100%;
    box-sizing: border-box;
}
.top-status{
    background:#fff;
    width:100%;
    height:100rpx;
    box-sizing: border-box;
    border-bottom:#eee 1rpx solid;
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: fixed;
    top:0;
}
.top-status-tit{
  padding:30rpx 10rpx;
    font-size:30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.top-status-active{
  border-bottom:#FF443A 1rpx solid;
}

.contents {
    width: 100%;
    font-size: 28rpx;
    box-sizing: border-box;
    margin-top:120rpx;
}
.refund-list {
	padding:  0 20rpx;
	width: 100%;
	box-sizing: border-box;
}
.refund-item {
	margin: 20rpx 0;
	overflow: hidden;
	width: 100%;
	border-radius: 20rpx;
	background: #ffffff;
	box-sizing: border-box;
}
.refund-item-top {
	display: flex;
	align-items: flex-end;
	padding: 0 20rpx;
	width: 100%;
	height: 60rpx;
	font-size: 30rpx;
	font-weight: 500;
	box-sizing: border-box;
}
/*  */

.goods-list {
    padding: 25rpx 20rpx;
    width: 100%;
    box-sizing: border-box;
    background: #ffffff;
}

.goods-item {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    width: 100%;
    height: 180rpx;
    box-sizing: border-box;
    line-height: 1;
}

.goods-list>.goods-item:last-of-type {
    margin: 0;
}

.goods-img {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
}

.goods-img image {
    width: 180rpx;
    height: 180rpx;
}

.goods-item-right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
    height: 100%;
    margin-left: 20rpx;
    box-sizing: border-box;
}

.goods-item-right-top {
    width: 100%;
    box-sizing: border-box;
}

.goods-specs {
    display: flex;
    align-items: center;
}

.goods-name {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    line-height: 34rpx;
    font-weight: 500;
}

.goods-specs {
    font-size: 26rpx;
    color: #777777;
}

.goods-item-right-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    line-height: 1;
}

.goods-price {
    font-size: 28rpx;
    font-weight: 800;
}

.goods-num {
    font-size: 26rpx;
    color: #777777;
}
/*  */
.refund-item-star {
	display: flex;
	align-items: flex-start;
	padding: 0 20rpx;
	width: 100%;
	height: 90rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #f2f2f2;
}
.refund-item-star-left {
	flex:  0 0 auto;
	display: flex;
	align-items: center;
	margin-right: 20rpx;
}
.reftund-item-img {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 38rpx;
	height: 34rpx;
}
.reftund-item-img image {
	width: 38rpx;
	height: 34rpx;
}
.reftund-item-img-title {
	color: #777;
	font-size: 26rpx;
	margin-left: 20rpx;
}
.refund-item-star-right {
	font-size: 26rpx;
	font-weight: 500;
	line-height: 36rpx;
}
.refund-btns {
	display: flex;
	align-items: center;
	justify-content: flex-end;
	padding: 0 20rpx;
	width: 100%;
	height: 115rpx;
	box-sizing: border-box;
}
.refund-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 55rpx;
	min-width: 150rpx;
	border-radius: 55rpx;
	box-sizing: border-box;
	border: 1px solid #FF443A;
	color: #FF443A;
	font-weight: 500;
}
