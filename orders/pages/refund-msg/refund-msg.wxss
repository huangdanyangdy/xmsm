page {
    background: #f2f2f2;
}

.wrap {
    width: 100%;
    box-sizing: border-box;
}

.contents {
	margin-bottom: 150rpx;
    width: 100%;
    font-size: 28rpx;
    box-sizing: border-box;
}
.top{
	width: 100%;
	box-sizing: border-box;
}
.refund-item {
	width: 100%;
	background: #ffffff;
	box-sizing: border-box;
}
.refund-item-top {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	padding:  25rpx 20rpx;
	height: 150rpx;
	width: 100%;
	box-sizing: border-box;
	border-bottom: 1px solid #f2f2f2;
}
.refund-item-title {
	flex: 0 0 auto;
	font-size: 34rpx;
	font-weight: 500;
}
.refund-item-msg {
	display: flex;
	align-items: center;
	flex-wrap: nowrap;
	font-weight: 500;
	font-size: 28rpx;
	letter-spacing:-0.5rpx
}
.refund-item-msg p{
	white-space: nowrap;
}
.refund-item-msg>p:nth-of-type(2){
	color: #FF492E;
}
.msg-list {
	padding: 25rpx 20rpx;
	width: 100%;
	border-bottom: 1px solid #f2f2f2;
	box-sizing: border-box;
}
.msg-item {
	font-size: 26rpx;
	color: #777;
	line-height: 45rpx;
}
.refund-item-bottom {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 90rpx;
}
.refund-item-bottom-title {
	font-size: 30rpx;
	font-weight: 500;
	margin-right: 10rpx;
}
.refund-item-bottom-down {
	transform: scaleX(1.7);
	font-size: 24rpx;
	color: #777;
	font-weight: 100;
	transform-origin: 1 20rpx;
}
/*  */
.address {
	display: flex;
	margin: 20rpx 0;
	padding: 25rpx 20rpx;
	width: 100%;
	height: 180rpx;
	background: #ffffff;
	font-size: 26rpx;
	font-weight: 500;
	box-sizing: border-box;
}
.address-left {
	flex: 0 0 auto;
	white-space: nowrap;
	font-size: 28rpx;
	margin-right: 25rpx;

}
.address-right {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	height: 100%;
}
.address-right-top {
	display: flex;
	align-items: center;
}
.address-right-bottom {
	line-height: 45rpx;
}
/*  */
.refused {
	display: flex;
	align-items: center;
	margin: 20rpx 0;
	padding: 0 20rpx;
	width: 100%;
	height: 90rpx;
	background: #ffffff;
	font-weight: 500;
	box-sizing: border-box;
}
.refused-left {
	flex: 0 0 auto;
	margin-right: 20rpx;
}
/*  */
.recording {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 20rpx;
	margin: 20rpx 0;
	width: 100%;
	height: 90rpx;
	background: #ffffff;
	box-sizing: border-box;
}
.recording-left {
	font-weight: 500;
}
.recording-right {
	transform-origin: right 20rpx;
	transform: scaleY(1.5);
	font-weight: 100;
}
/*  */
.refund {
	padding: 20rpx 0;
	padding-top: 10rpx;
	width: 100%;
	box-sizing: border-box;
	background: #ffffff;
}
.refund-top {
	display: flex;
	align-items: flex-end;
	padding: 0 20rpx;
	width: 100%;
	height: 60rpx;
	font-size: 32rpx;
	font-weight: 500;
}
/*  */
.goods-list {
    padding: 30rpx 20rpx;
    width: 100%;
    box-sizing: border-box;
    background: #ffffff;
}

.goods-item {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    width: 100%;
    height: 180rpx;
    box-sizing: border-box;
    line-height: 1;
}

.goods-list>.goods-item:last-of-type {
    margin: 0;
}

.goods-img {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
}

.goods-img image {
    width: 180rpx;
    height: 180rpx;
}

.goods-item-right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
    height: 100%;
    margin-left: 20rpx;
    box-sizing: border-box;
}

.goods-item-right-top {
    width: 100%;
    box-sizing: border-box;
}

.goods-specs {
    display: flex;
    align-items: center;
    font-weight: 600;
}

.goods-name {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    line-height: 34rpx;
    font-weight: 500;
}

.goods-specs {
    font-size: 26rpx;
    color: #777777;
}

.goods-item-right-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    line-height: 1;
}

.goods-price {
    font-size: 28rpx;
    font-weight: 800;
}

.goods-num {
    font-size: 26rpx;
    color: #777777;
}
/*  */
.refund-bottom {
	padding: 0 20rpx;
	width: 100%;
	box-sizing: border-box;
}
.refund-bottom-item {
	position: relative;
	display: flex;
	align-items: center;
	font-size: 28rpx;
	font-weight: 500;
	height: 60rpx;
	color: #777;
}
.refund-bottom-item-right {
	position: absolute;
	left: 150rpx;
	display: flex;
	align-items: center;
}
.refund-bottom-item-right>p:first-of-type{
	color: #FF492E;
}
.footer {
	position: fixed;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	padding: 0 20rpx;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background: #ffffff;
	box-sizing: border-box;
	box-shadow:0px 5px 21px 0px rgba(6,0,1,0.14);
}
.refund-btns {
	display: flex;
	align-items: center;
	justify-content: flex-end;
	width: 100%;
	height: 100%;
	box-sizing: border-box;
}
.refund-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 20rpx;
	padding: 0 20rpx;
	height: 55rpx;
	min-width: 150rpx;
	border: 1px solid #777;
	color: #777;
	font-weight: 500;
	border-radius: 55rpx;
	box-sizing: border-box;
}
.refund-btns>.refund-btn:last-of-type{
	border:1px solid #FF443A;
	color: #FF443A;
}