.conpons-box {
	position: fixed;
	top: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	z-index: 9999;
}
.screen {
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	background: rgba(50,50,50,0.3);
}
.conpons{
	position: absolute;
	bottom: 0;
	height: 595rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	width: 100%;
	border-top-left-radius: 20rpx;
	border-top-right-radius: 20rpx;
	background: #ffffff;
}
.conpons-top {
	display: flex;
	align-items: flex-end;
	justify-content: center;
	width: 100%;
	height: 90rpx;
	font-size: 32rpx;
	margin-bottom: 20rpx;
	font-weight: 500;
	box-sizing: border-box;
}
.conpons-list {
  position: relative;
  top:-40rpx;
	padding: 0 20rpx;
	width: 100%;
	height: 280rpx;
	overflow-y: scroll;
