}
.conpons-item {
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 100%;
	height: 60rpx;
	box-sizing: border-box;
}
.conpons-item-left {
	display: flex;
	align-items: center;
	font-size: 32rpx;
}
.conpons-item-right {
	flex:  0 0 auto;
	width: 30rpx;
	height: 30rpx;
}
.conpons-item-right image {
	width: 30rpx;
	height: 30rpx;
}
.conpons-btns {
	position: relative;
	bottom: 40rpx;
	display: flex;
	align-items: center;
	margin: 0 20rpx;
	width: 710rpx;
	height: 80rpx;
	overflow: hidden;
	border-radius:40rpx;
	z-index: 999;
}
.conpons-btn {
	
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 80rpx;
	color: #ffffff;
	font-size: 32rpx;
	font-weight: 500;
	background:linear-gradient(127deg,rgba(255,68,58,1) 0%,rgba(253,64,27,1) 100%);
	box-sizing: border-box;
	
}
.conpons-btn-left {
	border: 1rpx solid rgba(253,64,27);
	background: #ffffff;
	border-top-left-radius:40rpx;
	border-bottom-left-radius:40rpx;
	color: rgba(253,64,27);
}