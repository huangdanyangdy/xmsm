page {
    background: #f2f2f2;
    height: 100%;
}

.wrap {
    position: relative;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.contents {
    position: fixed;
    top: 0;
    bottom: 120rpx;
    width: 100%;
    height: 100%;
    overflow: scroll;
    box-sizing: border-box;
}

.address-list {
    width: 100%;
    box-sizing: border-box;
}

.address-swiper {
    position: relative;
    height: 125rpx;
}

.address {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    width: 100%;
    height: 125rpx;
    background: #ffffff;
    border-bottom: 1px solid #f2f2f2;
    box-sizing: border-box;
}

.address-msg {
    display: flex;
    align-items: center;
}

.address-img {
    flex: 0 0 auto;
    overflow: hidden;
    width: 35rpx;
    height: 35rpx;
    border-radius: 50%;
}

.address-img image {
    width: 35rpx;
    height: 35rpx;
}

.address-right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 20rpx;
}

.address-right-top {
    display: flex;
    align-items: flex-end;
    margin-bottom: 10rpx;
}

.address-name {
    font-size: 32rpx;
    font-weight: 500;
    margin-right: 30rpx;
}

.address-phone {
    color: #777777;
    font-size: 26rpx;
}

.address-content {
  width: 100%;
    color: #777777;
    font-size: 26rpx;
}

.adddress-swiper-item {
    width: 750rpx!important;
    height: 100%;
    margin-left: -650rpx;
}

.right-icon {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  min-width: 100rpx;
  font-size: 26rpx;
    color: rgba(255, 104, 58, 1);
}

.del-btn {
    height: 100%;
    width: 100rpx;
    background: rgba(255, 104, 58, 1);
    color: #ffffff;
}

.delete {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100rpx;
    height: 100%;
    font-size: 26rpx;
}

.address-btns {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 40rpx;
    width: 100%;
    bottom: 0;
    background: #ffffff;
    box-sizing: border-box;
    z-index: 999;
}

.address-btn-box {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80rpx;
    width: 690rpx;
    overflow: hidden;
    border-radius: 80rpx;
    color: #ffffff;
    border: 1px solid rgba(255, 104, 58, 1);
}

.address-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    height: inherit;
    background: linear-gradient(68deg, rgba(255, 104, 58, 1) 0%, rgba(253, 64, 27, 1) 100%);
}

.address-btn-box>.address-btn:first-of-type {
    background: #ffffff;
    color: rgba(253, 64, 27, 1);
}


