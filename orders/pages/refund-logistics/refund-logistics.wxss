.star-box {
	position: fixed;
	top: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	z-index: 9999;
}
.screen {
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	background: rgba(50,50,50,0.3);
}
.star{
	position: absolute;
	bottom: 0;
	height: 595rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	width: 100%;
	border-top-left-radius: 20rpx;
	border-top-right-radius: 20rpx;
	background: #ffffff;
}
.star-top {
	display: flex;
	align-items: flex-end;
	justify-content: center;
	width: 100%;
	height: 90rpx;
	font-size: 32rpx;
	margin-bottom: 20rpx;
	font-weight: 500;
	box-sizing: border-box;
}
.star-list {
	padding: 0 20rpx;
	width: 100%;
	height: 310rpx;
	overflow-y: scroll;
	box-sizing: border-box;
}
.star-item {
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 100%;
	height: 60rpx;
	box-sizing: border-box;
}
.star-item-left {
	font-size: 32rpx;
}
.star-item-right {
	flex:  0 0 auto;
	width: 30rpx;
	height: 30rpx;
}
.star-item-right image {
	width: 30rpx;
	height: 30rpx;
}
.star-btns {
	display: flex;
	align-items: center;
	padding: 0 20rpx;
	width: 100%;
	height: 200rpx;
	box-sizing: border-box;
}
.star-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 80rpx;
	color: #ffffff;
	font-size: 32rpx;
	font-weight: 500;
	background:linear-gradient(127deg,rgba(255,68,58,1) 0%,rgba(253,64,27,1) 100%);
	border-radius:40rpx;
	box-sizing: border-box;
}