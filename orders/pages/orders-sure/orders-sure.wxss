page {
    background: #f2f2f2;
    
}

.wrap {
    position: relative;
    width: 100%;
    font-size: 28rpx;
    box-sizing: border-box;
}

.contents {
    position: relative;
    width: 100%;
	margin-bottom: 150rpx;
    box-sizing: border-box;
}
/*  */
.address-box {
    padding: 0 20rpx;
    margin: 20rpx 0;
    width: 100%;
    box-sizing: border-box;
}

.address {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    width: 100%;
    height: 145rpx;
    border-radius: 20rpx;
    background: #ffffff;
    box-sizing: border-box;
}

.address-msg {
    display: flex;
    align-items: center;
}

.address-img {
    flex: 0 0 auto;
    overflow: hidden;
    width: 60rpx;
    height: 60rpx;
    background: linear-gradient(68deg, rgba(255, 104, 58, 1) 0%, rgba(253, 64, 27, 1) 100%);
    border-radius: 50%;
}

.address-img image {
    width: 60rpx;
    height: 60rpx;
}

.address-right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 20rpx;
}

.address-right-top {
    display: flex;
    align-items: flex-end;
    margin-bottom: 18rpx;
}

.address-name {
    font-size: 32rpx;
    font-weight: 500;
    margin-right: 30rpx;
}

.address-phone {
    color: #777777;
    font-size: 26rpx;
}

.address-content {
    color: #777777;
    font-size: 26rpx;
}
.right-icon {
  display: flex;
  align-items: center;
  justify-content: center;
    color: #777777;
    transform: scaleY(1.5);
	margin-left: 12rpx;
  margin-bottom: 7rpx;

}
/*  */

.goods-box {
	padding: 0 20rpx;
	width: 100%;
	box-sizing: border-box;
}
.goods {
	overflow: hidden;
	width: 100%;
	box-sizing: border-box;
	background: #ffffff;
	border-radius: 20rpx;
}
.goods-top {
	display: flex;
	align-items: center;
	padding: 0 20rpx;
	width: 100%;
	height: 85rpx;
	box-sizing: border-box;
	font-size: 30rpx;
	font-weight: 500;
}
/*  */
.goods-list {
	padding: 0 20rpx;
	width: 100%;
  margin-bottom:10rpx; 
	box-sizing: border-box;
}
.goods-item {
	display: flex;
	align-items: center;
	margin-bottom: 30rpx;
	width: 100%;
	height: 180rpx;
	box-sizing: border-box;
  line-height: 1;
}
.goods-list>.goods-item:last-of-type{
	margin: 0;
}
.goods-img {
	flex: 0 0 auto;
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
	width: 180rpx;
	height: 180rpx;
	border-radius: 10rpx;
}
.goods-img image {
	width: 180rpx;
	height: 180rpx;
}
.goods-item-right {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	flex: 1;
	height: 100%;
	margin-left: 20rpx;
	box-sizing: border-box;
}
.goods-item-right-top {
	width: 100%;
	box-sizing: border-box;
}
.goods-specs {
	display: flex;
	align-items: center;
}
.goods-name {
	font-size: 28rpx;
	margin-bottom: 10rpx;
  line-height: 36rpx;
}
.goods-specs {
	font-size: 26rpx;
	color: #777777;
	
}
.goods-item-right-bottom {
	display: flex;
	align-items: center;
	justify-content: space-between;
    line-height: 1;
}
.goods-price {
	font-size: 28rpx;
	font-weight: 800;

}
.goods-num {
	font-size: 26rpx;
	color: #777777;
}
/*  */
.order-msg {
	width: 100%;
	box-sizing: border-box;
}
.order-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 20rpx;
	width: 100%;
	height: 80rpx;
	box-sizing: border-box;
}
.order-item-left {
	display: flex;
	align-items: center;
}
.order-item-right {
	display: flex;
	align-items: center;
}
.order-item-right-title {
}
.order-item-left-name {
	font-size: 30rpx;
	font-weight: 500;
	margin-right: 50rpx;
}
.order-item-left-msg {
	color: #777777;
}
.order-item-right-title{
	font-size: 28rpx;
}
/*  */
.goods-bottom {
	display: flex;
	align-items: center;
	justify-content: flex-end;
	padding: 0 20rpx;
	width: 100%;
	height: 110rpx;
	box-sizing: border-box;
}
.goods-total {
	display: flex;
	align-items: flex-end;
	justify-items: flex-end;
  line-height: 1;
	
}
.goods-nums {
	font-size: 28rpx;
	color: #777777;
   display: flex;
  justify-content: center;
  align-items: flex-end;
  
}
.goods-total-title {
	font-size: 34rpx;
	font-weight: 500;
	margin: 0 10rpx;
   display: flex;
  justify-content: center;
  align-items: flex-end;
}
.goods-prices {
	font-size: 38rpx;
	color: #ff4131;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  line-height: 1;
}
.goods-prices>p:first-of-type{
  font-size: 30rpx;
  margin-right: 5rpx
}
.goods-prices>p:last-of-type{
line-height: 0.8;
}
/*  */
.footer {
	position: fixed;
	bottom: 0;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	padding: 0 20rpx;
	width: 100%;
	height: 100rpx;
	z-index: 999;
	box-shadow: 0 -6rpx 10rpx 0 #e9e9e9;
	background: #ffffff;
	box-sizing: border-box;
}
.order-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 20rpx;
	width: 180rpx;
	height: 70rpx;
	color: #ffffff;
	font-size: 32rpx;
	background: #fe3c16;
	border-radius:70rpx;
	box-sizing: border-box;
}
/*  */
.conpons-box {
	position: fixed;
	top: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	z-index: 9999;
}
.screen {
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	background: rgba(50,50,50,0.3);
}
.conpons{
	position: absolute;
	bottom: 0;
	height: 595rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	width: 100%;
	border-top-left-radius: 20rpx;
	border-top-right-radius: 20rpx;
	background: #ffffff;
}
.conpons-top {
	display: flex;
	align-items: flex-end;
	justify-content: center;
	width: 100%;
	height: 90rpx;
	font-size: 32rpx;
	margin-bottom: 20rpx;
	font-weight: 500;
	box-sizing: border-box;
}
.conpons-list {
	padding: 0 20rpx;
	width: 100%;
	height: 310rpx;
	overflow-y: scroll;
	box-sizing: border-box;
}
.conpons-item {
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 100%;
	height: 60rpx;
	box-sizing: border-box;
}
.conpons-item-left {
	display: flex;
	align-items: center;
	font-size: 32rpx;
}
.conpons-item-right {
	flex:  0 0 auto;
	width: 30rpx;
	height: 30rpx;
}
.conpons-item-right image {
	width: 30rpx;
	height: 30rpx;
}
.conpons-btns {
	display: flex;
	align-items: center;
	padding: 0 20rpx;
	width: 100%;
	height: 200rpx;
	box-sizing: border-box;
}
.conpons-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 80rpx;
	color: #ffffff;
	font-size: 32rpx;
	font-weight: 500;
	background:linear-gradient(127deg,rgba(255,68,58,1) 0%,rgba(253,64,27,1) 100%);
	border-radius:40rpx;
	box-sizing: border-box;
}