page {
    background: #f2f2f2;
    height: 100%;
    width: 100%;

}

.wrap {
    position: relative;
    width: 100%;
    height: 100%;
    box-sizing: border-box;

}

.contents {
    position: relative;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.address-import {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 20rpx;
    width: 100%;
    height: 90rpx;
    background: #ffffff;
    margin-bottom: 20rpx;
    box-sizing: border-box;
}

.address-title {
    margin-left: 20rpx;
}

.address-img {
    width: 50rpx;
    height: 50rpx;
}

.address-img image {
    width: 50rpx;
    height: 50rpx;
}

.form-box {
    width: 100%;
    box-sizing: border-box;
    font-size: 32rpx;
}

.form-item {
    position: relative;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    width: 100%;
    height: 110rpx;
    box-sizing: border-box;
    background: #ffffff;
    border-bottom: 1px solid #eaeaea;
}

.form-left {
 
}

.form-right {
    position: absolute;
    left: 210rpx;
    display: flex;
    align-items: center;
    height: 100%;
    box-sizing: border-box;
}

.picker-region {
    display: flex;
    align-items: center;
    width: 100%;
    height: 110rpx;
    box-sizing: border-box;
}

.form-right-region input {
    display: flex;
    align-items: center;
    width: 100%;
}

.form-text {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    width: 100%;
    height: 130rpx;
    background: #ffffff;
    box-sizing: border-box;
}

.form-text input {
    display: block;
    width: 100%;
}

.form-switch {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    width: 100%;
    height: 115rpx;
    margin-top: 20rpx;
    background: #ffffff;
    box-sizing: border-box;
}

.form-switch-right {
    transform: scale(0.8);
}

.form-btn {
    position: fixed;
    display: flex;
    align-content: center;
    padding: 0 20rpx;
    bottom: 60rpx;
    width: 100%;
    height: 90rpx;
    box-sizing: border-box;
}

.form-btn button {
    width: 100%;
    height: 100%;
    color: #ffffff;
    font-size: 34rpx;
    font-weight: 500;
    background: linear-gradient(68deg, rgba(255, 104, 58, 1) 0%, rgba(253, 64, 27, 1) 100%);
    border-radius: 50rpx;
    box-sizing: border-box;
}