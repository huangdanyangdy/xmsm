}

.coupon-out-box {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    margin-bottom: 30rpx;
}

.goods-coupon-one {
    position: relative;
    border: 1px solid #FF4439;
    color: #FF4439;
    margin-right: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 7rpx 10rpx;
}

.goods-coupon-one::after {
    position: absolute;
    top: 40%;
    right: -5rpx;
    display: block;
    content: '\200b';
    width: 10rpx;
    height: 10rpx;
    border-radius: 10rpx;
    border: 1px solid #d7340b;
    border-top: rgba(0, 0, 0, 0);
    border-left: rgba(0, 0, 0, 0);
    transform: rotate(135deg);
    background: #FFFFFF;
}

.goods-coupon-one:before {
    position: absolute;
    top: 40%;
    left: -5rpx;
    display: block;
    content: '\200b';
    width: 10rpx;
    height: 10rpx;
    border-radius: 10rpx;
    border: 1px solid #d7340b;
    border-top: rgba(0, 0, 0, 0);
    border-left: rgba(0, 0, 0, 0);
    transform: rotate(-45deg);
    background: #FFFFFF;
}

.goods-coupon-two {
    border: 1px solid #FF4439;
    color: #FF4439;
    margin-right: 20rpx;
    display: flex;
    justify-content: center;
