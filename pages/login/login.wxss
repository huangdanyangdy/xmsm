.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.header image {
    width: 200rpx;
    height: 200rpx;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    font-size: 30rpx;
    margin-top: 40rpx;
}

.bottom {
    display: block;
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
    background-color: #FF4439;
}

.button-hover {
    background: #FF4439;
}

button[type=primary] {
    background: #FF4439;
}

.button-hover[type=primary] {
    background: #FF4439;
}