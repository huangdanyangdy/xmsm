page {
    width: 100%;
    box-sizing: border-box;
}

.wrap {
    position: relative;
    width: 100%;
    box-sizing: border-box;
    font-family: PingFang SC;
    font-size: 28rpx;
    color: #212121;
}

.top {
    position: fixed;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 90rpx;
    background: #ff492e;
    z-index: 999;
}

.top-search {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    width: 580rpx;
    height: 55rpx;
    background: rgba(243, 242, 242, 1);
    border-radius: 25rpx;
    box-sizing: border-box;
    opacity: 0.73;
}
.search-img{
   margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top:5rpx;
    width: 30rpx;
    height: 30rpx;
    box-sizing: border-box;
}
.search-img image {
    width: 30rpx;
    height: 30rpx;
}

.top-search input {
    margin-left: 10rpx;
}

.contents {
    position: relative;
    display: flex;
    top: 90rpx;
    bottom: 100rpx;
    width: 100%;
    box-sizing: border-box;
}

.search-btn {
    margin-left: 35rpx;
    color: #ffffff;
}

.search-content {
    padding: 0 20rpx;
    width: 100%;
    box-sizing: border-box;
}

.search-history {
    /* border-bottom: 1rpx solid #e6e6e6; */
}

.search-history-title,
.search-hot-title {
    display: flex;
    align-items: center;
    width: 100%;
    height: 110rpx;
    font-size: 30rpx;
    font-weight: bold;
}

.search-history-title {
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
    font-weight: bold;
}

.delete-img,.delete-img image {
    width: 32rpx;
    height: 34rpx;
}


/*  */

.search-history-lists,
.search-hot-lists {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.search-hot-item,
.search-history-item {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 15rpx;
    margin-bottom: 15rpx;
    padding: 0 20rpx;
    color: #777777;
    font-size: 26 rpx;
    height: 55rpx;
    background: #f7f7f7;
    border-radius: 25rpx;
    box-sizing: border-box;
}