page {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.wrap {
    position: relative;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    font-family: PingFang SC;
    font-size: 28rpx;
    color: #212121;
}

.top {
    position: fixed;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 90rpx;
    background: #ff492e;
    z-index: 999;
}

.top-search {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    width: 690rpx;
    height: 50rpx;
    background: rgba(243, 242, 242, 1);
    border-radius: 25rpx;
    box-sizing: border-box;
}
.search-img {
    width: 35rpx;
    height: 35rpx;
    display: flex;
    justify-content: center;
    align-content: center;
}
 .search-img image {
    width: 35rpx;
    height: 35rpx;
}

.top-search input {
    margin-left: 10rpx;
}

.contents {
    position: fixed;
    display: flex;
    top: 90rpx;
    bottom: 100rpx;
    width: 100%;
    box-sizing: border-box;
}

.contents-left {
    position: relative;
    top: 0;
    /* overflow: hidden; */
    height: 100%;
    /* bottom: 100rpx; */
    width: 190rpx;
    overflow-y: scroll;
    background: #F3F2F2;
}

.class-list {
    display: flex;
    flex-direction: column;
    width: 100%;
    box-sizing: border-box;
}

.class-item {
    display: flex;
    align-items: center;
    width: 100%;
    height: 120rpx;
    box-sizing: border-box;
}

.class-item-active {
    background: #ffffff;
}

.class-name {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    height: 40rpx;
    width: 100%;
    box-sizing: border-box;
}

.class-name-active {
    border-left: 10rpx solid #ff492e;
}

.contents-right {
    position: relative;
    top: 0;
    right: 0;
    padding: 30rpx;
    width: 560rpx;
    height: 100%;
    overflow: scroll;
    box-sizing: border-box;
    
}

.class-msg {
    width: 100%;
    box-sizing: border-box;
}

.class-adv {
    overflow: hidden;
    width: 500rpx;
    height: 160rpx;
    border-radius: 10rpx;
}

.class-adv image {
    width: 500rpx;
    height: 160rpx;
}

.class-content {
    width: 100%;
    box-sizing: border-box;
}

.class-title {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 150rpx;
    box-sizing: border-box;
    font-weight: 500;
}

.class-title::before {
    content: '';
    width: 55rpx;
    height: 2rpx;
    background: #909090;
}

.class-title::after {
    content: '';
    width: 55rpx;
    height: 2rpx;
    background: #909090;
}

.class-title text {
    margin: 0 10rpx;
    font-weight: 500rpx;
}

.class-lists {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 30rpx 40rpx;
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.class-items {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 130rpx;
    height: 195rpx;
}

.class-img {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 auto;
    overflow: hidden;
    width: 130rpx;
    height: 130rpx;
}

.class-img image {
    width: 130rpx;
    height: 130rpx;
}

.class-names {
    height: 65rpx;
    line-height: 65rpx;
    font-size: 24rpx;
    box-sizing: border-box;
    color: #767676;
}