page {
	background: #f2f2f2;
}
.wrap {
	position: relative;
	width: 100%;
	box-sizing: border-box;
}
.top {
	width: 100%;
	box-sizing: border-box;
}
.address {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 20rpx;
	height: 65rpx;
	width: 100%;
	font-size: 26rpx;
	background: #ffffff;
	box-sizing: border-box;
}
.address-left {
	display: flex;
	align-items: center;
}
.address-img {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 20rpx;
	height: 26rpx;
}
.address-img image {
	width: 20rpx;
	height: 26rpx;
	
}
.address-msg {
	margin-left: 10rpx;
	color: #777777;
	font-size: 500;
}
.address-right {
	flex:  0 0 auto;
	display: flex;
	align-items: center;
}
.address-btn {
	margin-left: 25rpx;

}
/*  */
.contents {
	margin-bottom: 200rpx;
	width: 100%;
	box-sizing: border-box;
}
.cart-list {
	padding-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}
.goods-item {
	position: relative;
	display: flex;
	align-items: center;
	padding: 40rpx 20rpx;
	margin-bottom: ;
	width: 100%;
	height: 260rpx;
	box-sizing: border-box;
	background: #ffffff;
	margin-bottom: 20rpx;
}
.goods-select {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 30rpx;
	height: 30rpx;
}
.goods-select image {
	width: 30rpx;
	height: 30rpx;
}
.goods-item-right {
	display: flex;
	margin-left: 20rpx;
	
}
.goods-img {
	flex: 0 0 auto;
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
	width: 180rpx;
	height: 180rpx;
	border-radius: 10rpx;
}
.goods-img image{
	width: 180rpx;
	height: 180rpx;
}
.goods-msg {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	margin-left: 20rpx;
	box-sizing: border-box;
}
.goods-name {
	font-size: 28rpx;
	margin-bottom: 10rpx;
  line-height: 36rpx;
}
.goods-specs-box {
	display: flex;
	align-items: center;
}
.goods-specs {
	display: flex;
	align-items: center;
	font-size: 26rpx;
	color: #777777;
	border-radius: 5rpx;
  margin-top: 5rpx;
	box-sizing: border-box;
}
.godos-specs-left {
	display: flex;
	align-items: center;
}
.goods-specs-left-left {
	margin-right: 10rpx;
}
.goods-specs-right{
	transform-origin: 1 20rpx;
	transform: scaleX(1.8);
	font-size: 18rpx;
	margin-left: 10rpx;
}
.goods-price {
  display: flex;
  align-items: flex-end;
	font-size: 32rpx;
	color: #FF443A;
	font-weight: 900;
}

/*  */
.goods-btns {
	position: absolute;
	right: 20rpx;
	bottom: 40rpx;
	display: flex;
	align-items: center;
	height: 40rpx;
	line-height: 0.8;
	box-sizing: border-box;
}
.minus,.add,.goods-num {
	display:flex;
	align-items: center;
	justify-content: center;
	background: #eeeeee;
	height: 100%;
	border-radius: 10rpx;
}
.minus,.add {
	width: 40rpx;
	color: #797979;
	font-size: 32rpx;
  padding-bottom:5rpx;
  box-sizing: border-box;
}
.goods-num {
	margin: 0 2rpx;
	min-width: 40rpx;
	max-width: 150rpx;
	font-size: 26rpx;
	box-sizing: border-box;
}
/*  */
.footer {
	position: fixed;
	bottom: 100rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 20rpx;
	width: 100%;
	box-sizing: border-box;
	z-index: 99;
	height: 100rpx;
	  box-shadow:0px 5px 21px 0px rgba(6,0,1,0.14);
	background:rgba(247,246,246,1);
}
.select {
	display: flex;
	align-items: center;
}
.select-title{
	margin-left: 20rpx;
}
.footer-right {
	display: flex;
	align-items: center;
}
.goods-total {
	display: flex;
	align-items: flex-end;
	justify-items: flex-end;
  line-height: 1;
	
}
.goods-nums {
	font-size: 28rpx;
	color: #777777;
   display: flex;
  justify-content: center;
  align-items: flex-end;
}
.goods-total-title {
	font-size: 34rpx;
	margin: 0 10rpx;
   display: flex;
  justify-content: center;
  align-items: flex-end;
}
.goods-prices {
	font-size: 38rpx;
	color: #ff4131;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  line-height: 1;
}
.goods-prices>p:first-of-type{
  font-size: 30rpx;
  margin-right: 5rpx
}
.goods-prices>p:last-of-type{
line-height: 0.8;
}
.cart-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 20rpx;
	height: 70rpx;
	min-width: 180rpx;
	color: #ffffff;
	background:linear-gradient(69deg,rgba(255,68,58,1) 0%,rgba(255,56,2,1) 100%);
	border-radius:35rpx;
	font-size: 30rpx;
	
}
/*  */