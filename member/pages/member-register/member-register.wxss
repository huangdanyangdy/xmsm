page{
    background: #F2F2F2;
}
.mine-container{
    font-family:PingFang SC;
    color:#212121;
    margin-bottom: 150rpx;
}
/*顶部橙色背景-----------*/
.mine-top{
    width: 100%;
    height:386rpx;
    background:url("https://img.xmsmoo.com/upload/simuIcon/20191026134219482401.png");
    background-size: 100%;
}
.nav-top{
    /* height:170rpx; */
    padding: 30rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.nav-topLeft{
    display: flex;
    padding-left:40rpx;
}
.nav-topRight{
    display: flex;
    white-space: nowrap;
}
.nav-memberImg{
    width:120rpx;
    height:120rpx;
    border-radius:50%;
    overflow: hidden;
    flex:0 0 auto;
}
.nav-memberImg image{
    width:120rpx;
    height:120rpx;
}
.nav-infoBox{
    display: flex;
    justify-content:center;
    align-items:flex-start;
    flex-direction: column;
    margin-left:20rpx;
}
.nav-memName{
    display: flex;
    justify-content:center;
    align-items: center;
    margin-bottom: 20rpx;
}
.nav-vipName{
    font-size:30rpx;
    color:#fff;
    font-weight:bold;
}
.nav-vipId{
    font-size:22rpx;
    color:#fff;
}
.nav-topRight{
    background:rgba(255,255,255,0.6);
    border-top-left-radius: 25rpx;
    border-bottom-left-radius: 25rpx;
    display: flex;
    justify-content:center;
    align-items: center;
    margin-top:-70rpx;
    padding:10rpx 27rpx;
}
.member-central{
    font-size:22rpx;
    color:#F03A2F;
}
/*<!--点击签到===============-->*/
.register-cont{
  /* height:553rpx; */
    background:rgba(255,255,255,1);
    border-radius:20rpx;
    margin:0 20rpx;
    margin-top: -170rpx;
    margin-bottom:20rpx;
    padding: 65rpx 0;
    box-sizing: border-box;
}
.cont-top{
    display: flex;
    width:100%;
    flex:1;
}
.top-date{
    font-size:100rpx;
    padding-left: 42rpx;
    line-height: 0.8;
}
.top-wrap{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.top-week{
    font-size:34rpx;
}
.month-year{
    font-size:28rpx;

    color:rgba(119,119,119,1);
}
.gift-img{
    display: flex;
    justify-content: center;
    align-items: center;
    width:286rpx;
    height:224rpx;
    margin-top:-140rpx;
    margin-left:80rpx;

}
.gift-img image{
    width:286rpx;
    height:224rpx;
}

.register-pro{
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 0 30rpx;
    overflow: hidden;
    width: 100%;
    box-sizing:border-box;
    margin-top:90rpx;
}
.pro-box{
    display: flex;
    justify-content:center;
    align-items: center;
    flex-direction: column;
}


.pro-mark{
    font-size:20rpx;
    color:#777;
}
.pro-img{
    position: relative;
    display: flex;
    align-items: center;
    width:30rpx;
    height:30rpx;
    border-radius: 50%;
    margin:10rpx 0;
}
.pro-img::after{
     position: absolute;
     content:'';
     left: 30rpx;
     width:60rpx;
     height:4rpx;
     background: #777;
     /* z-index: 1; */
 }
 .pro-box:first-of-type>.pro-img::before{
    position: absolute;
    content:'';
    width:30rpx;
    right:30rpx;
    height:4rpx;
    background: #777;
    /* z-index: 1; */
}
.pro-box:last-of-type>.pro-img::after{
    position: absolute;
    content:'';
    width:30rpx;
    height:4rpx;
    background: #777;
    /* z-index: 1; */
}
 
.pro-img image{
    flex: 0 0 auto;
    width:30rpx;
    height:30rpx;
}
/*签到按钮-----------*/
.btn-box{
    display: flex;
    justify-content:center;
    align-items: center;
    margin-top:80rpx;
    /* margin-bottom: 60rpx; */
}
.register-btn{
    display: flex;
    justify-content:center;
    align-items: center;
    color: #fff;
    font-size:28rpx;
    font-weight:bold;
    width:350rpx;
    height:70rpx;
    background:linear-gradient(0deg,rgba(251,151,43,1) 0%,rgba(254,194,8,1) 100%);
    border-radius:35rpx;
}
/*<!--今日任务================-->*/
.task-cont{
    background: #fff;
    margin:0 20rpx;
    border-radius:20rpx;
}
.task{
    font-size:28rpx;
    font-weight:bold;
    padding:30rpx 20rpx;
}
.task-item{
    display: flex;
    justify-content:space-between;
    align-items: center;
    padding:30rpx 20rpx;
    border-bottom: 1rpx solid #ddd;
}
.task-item:last-of-type{
    border-bottom: none;
}
.item-left{
    display: flex;
    justify-content:flex-start;
    align-items: center;
}
.left-img{
    display: flex;
    justify-content:center;
    align-items: center;
    width:60rpx;
    height:60rpx;
}
.left-img image{
    width:60rpx;
    height:60rpx;
}
.left-cont{
    margin-left:40rpx;
}
.cont-task{
    font-size:28rpx;
}
.cont-mark{
    font-size:20rpx;
}
.cont-mark-mark{
    color:#fc5751
}
.todo{
    background:linear-gradient(75deg,rgba(254,68,41,1) 0%,rgba(255,127,42,1) 100%);
    border-radius:25rpx;
    font-size:22rpx;
    color:rgba(235,235,235,1);
    padding:10rpx 20rpx;
}
/*积分抽奖========*/
.mark-draw{
    font-size:28rpx;
    font-weight:bold;
    padding:30rpx 40rpx;

}
.draw-img{
    width:693rpx;
    height:200rpx;
    border-radius:10rpx;
    margin:10rpx auto;
    overflow: hidden;
    margin-bottom:40rpx;
}
.draw-img image{
    width:693rpx;
    height:200rpx;
}
/*  */
.sign-box {
    position: fixed;
    top: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    z-index: 999
}

.screen {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: rgba(50, 50, 50, 0.3);
}

.sign {
    position: relative;
    top: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 430rpx;
    height: 690rpx;
    background: url('https://img.xmsmoo.com/upload/4/20191030151749325484.png') 0 0 no-repeat;
    background-size: 100% 100%;
    box-sizing: border-box;
}

.sign-top {
    position: relative;
    top: 390rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    height: 120rpx;
    box-sizing: border-box;
}

.sign-top-top {
    display: flex;
    align-items: flex-end;
}

.sign-top-top-left {
    color: #F83144;
    font-size: 50rpx;
    font-weight: 500;
    line-height: 1;
    margin-right: 5rpx;
}

.sign-top-top-right {
    color: #F83144;
    font-size: 26rpx;
    font-weight: 500;
}

.sign-top-bottom {
    font-size: 26rpx;
    color: #777777;
}

.sign-btn {
    position: absolute;
    bottom: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 290rpx;
    height: 70rpx;
    background: rgba(255, 50, 70, 1);
    box-shadow: 0px 16px 20px 0px rgba(255, 50, 70, 0.4);
    border-radius: 70rpx;
    color: #fff;
    font-weight: bold;
    font-size: 38rpx;
}

.sign-del-img {
    position: absolute;
    bottom: -130rpx;
    width: 50rpx;
    height: 50rpx;
}

.sign-del-img image {
    width: 50rpx;
    height: 50rpx;
}