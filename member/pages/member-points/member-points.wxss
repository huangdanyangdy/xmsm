page {
    background: #f2f2f2;
}

.wrap {
    width: 100%;
    box-sizing: border-box;
}
.top {
	position: relative;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	padding: 30rpx 0;
	width: 100%;
	height: 450rpx;
	background: url(https://img.xmsmoo.com/upload/4/20191030094931166568.png) 0 -110rpx no-repeat;
	background-size: 100%;
	box-sizing: border-box;
}
.contents {
    width: 100%;
    font-size: 28rpx;
    box-sizing: border-box;
}
.points-box{
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
	color: #ffffff;
}
.points-usable {
	font-size: 62rpx;
	font-weight: 500;
}
.points-usable-title{
	font-size: 26rpx;
	font-weight: 500;
	
}
.points-msg {
	display: flex;
	justify-content: space-around;
	width: 100%;
	box-sizing: border-box;
}
.points-msg-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	color: #FF443A;
}
.points-fatch {
	font-size: 48rpx;
	font-weight: bold;
}
.points-msg-item-bottom{
	display: flex;
	align-items: center;
}
.points-msg-title {
	font-size: 26rpx;
	margin-left: 10rpx;
}
.points-msg-img{
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
	width: 25rpx;
	height: 25rpx;
}
.points-msg-img image {
	width: 25rpx;
	height: 25rpx;
}
/*  */
.points {
	margin-top: 20rpx;
	width: 100%;
	background: #ffffff;
	box-sizing: border-box;
	font-size: 30rpx;
	box-sizing: border-box;
}
.points-top{
	display: flex;
	align-items: flex-end;
	padding: 0 20rpx;
	width: 100%;
	height: 70rpx;
	box-sizing: border-box;
	font-weight: 500;
}
.points-list {
   width: 100%;
   box-sizing: border-box;
}
.points-item {
	display: flex;
	align-items: center;
  padding-left:20rpx; 
	width: 100%;
	height: 125rpx;
	box-sizing: border-box;

}
.points-list>.points-item:last-of-type {
	border:none;
}
.points-item-img {
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
	width: 60rpx;
	height: 60rpx;
}
.points-item-img image{
	width: 60rpx;
	height: 60rpx;
}
.points-item-right{
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 20rpx;
	flex: 1;
  height: 100%;
  border-bottom: 1px solid #f2f2f2;
	box-sizing: border-box;
}
.points-title {
  margin-bottom: 10rpx;
	font-weight: 500;
}
.points-time {
	font-size: 22rpx;
	color: #777777;
}
.points-item-right-left {
	font-weight: 500;
	color: #FF443A;
}