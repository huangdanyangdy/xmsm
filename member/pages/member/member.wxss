/* member/pages/member/member.wxss */

page {
    background: #F2F2F2;
    font-family: PingFang SC;
    color: 212121;
    width: 100%;
    height: 100%;
}

.module-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 0 20rpx;
    margin-top: 30rpx;
}


/*顶部橙色背景*/

.mine-top {
    width: 100%;
    height: 210rpx;
    background: url("https://img.xmsmoo.com/upload/simuIcon/20191026134219482401.png");
    background-size: 100%;
    border-bottom-left-radius: 375rpx 30rpx;
    border-bottom-right-radius: 375rpx 30rpx;
}

.member-msg {
    width: 690rpx;
    height: 315rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 1rpx 27rpx 0rpx rgba(240, 58, 47, 0.23);
    border-radius: 20rpx;
    margin: 0 auto;
    margin-top: -180rpx;
    padding: 35rpx;
    box-sizing: border-box;
}

.nav-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom:20rpx;
}

.nav-topLeft {
    display: flex;
}

.nav-topRight {
    display: flex;
    white-space: nowrap;
}

.nav-memberImg {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
    flex: 0 0 auto;
}

.nav-memberImg image {
    width: 120rpx;
    height: 120rpx;
}

.nav-infoBox {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    margin-left: 20rpx;
}

.nav-memName {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 20rpx;
}

.nav-vipName {
    font-size: 36rpx;
    font-weight: bold;
}

.nav-VipImg {
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(254deg, rgba(244, 166, 33, 1), rgba(255, 188, 74, 1));
    border-radius: 6rpx 10rpx 10rpx 10rpx;
    color: #fff;
    font-size: 22rpx;
    font-weight: 500;
    margin-left: 17rpx;
    padding: 6rpx;
}

.nav-VipImg image {
    width: 28rpx;
    height: 28rpx;
}

.nav-vipGrade {
    font-size: 22rpx;
}

.nav-topRight {
    background: #F03A2F;
    border-radius: 25rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10rpx 18rpx;
    margin-top: -40rpx;
}

.top-rightImg {
    width: 31rpx;
    height: 33rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-right: 10rpx;
}

.top-rightImg image {
    width: 31rpx;
    height: 33rpx;
}

.member-central {
    font-size: 26rpx;
    color: #FFF;
}


/*进度条-------*/

.nav-mid {
    display: flex;
    justify-content: center;
    font-size: 20rpx;
    color: #918382;
    margin-bottom: 15rpx;
}

.my-prog {
    width: 520rpx;
    height: 11rpx;
    margin: 0 auto;
    position: relative;
}

.prograss-img {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 44rpx;
    height: 38rpx;
    position: relative;
    left: 492rpx;
    bottom: 30rpx;
}

.prograss-img image {
    width: 44rpx;
    height: 38rpx;
}


/*会员等级----*/

.nav-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx;
    padding-bottom: 0;
}

.nav-bottom-item {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin-top: 8rpx;
}

.nav-itemGrade {
    font-size: 22rpx;
    color: #FF4439;
    margin-bottom: 5rpx;
}

.nav-itemMark {
    font-size: 22rpx;
    color: #777;
}


/*会员权益------------*/

.member-mid {
    width: 710rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    padding: 30rpx 20rpx;
    padding-top: 0rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
}

.mid-tit {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-weight: bold;
    font-size: 28rpx;
    padding: 25rpx 0;
}

.rights-list {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 0;
}

.rights-item {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-size: 24rpx;
    width: 167.5rpx;
    height: 160rpx;
}

.rights-img {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 55rpx;
    height: 55rpx;
}

.rights-img image {
    width: 55rpx;
    height: 55rpx;
}

.rights-tit {
    font-size: 24rpx;
    margin-top: 30rpx;
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}


/*<!--    会员优选========-->*/

.well-choose {
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 0;
    box-sizing: border-box;
}

.well-tit {
    font-weight: bold;
    font-size: 28rpx;
}

.view-more {
    display: flex;
    align-items: center;
}

.more-txt {
    font-size: 24rpx;
    color: #777;
}

.more-icon {
    font-size: 30rpx;
    transform: scaleY(1.5);
    color: #777;
    margin-bottom: 7rpx;
    margin-left: 12rpx;
}

.choose-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 15rpx;
}

.choose-item {
    width: 215rpx;
    height: 298rpx;
    background: rgba(250, 251, 255, 1);
    border-radius: 10rpx;
    overflow: hidden;
}

.choose-item image {
    width: 215rpx;
    height: 298rpx;
}