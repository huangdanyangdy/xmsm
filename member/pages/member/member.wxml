<!--顶部橙色背景=========-->
<view class="mine-top"></view>
<!--顶部会员信息=========-->
<view class="member-msg">
    <view class="nav-top">
        <view class="nav-topLeft">
            <view class="nav-memberImg"><image src="{{member.memberHeadimgurl}}"></image></view>
            <view class="nav-infoBox">
                <view class="nav-memName">
                    <view class="nav-vipName text1">{{member.memberNickname}}</view>
                    <view class="nav-VipImg" wx:if="{{member.memberState}}">VIP</view>
                </view>
                <view class="nav-vipGrade">{{member.memberLevelName}}</view>
            </view>
        </view>
        <view class="nav-topRight" bindtap="toRegister">
            <view class="top-rightImg"><image src="https://img.xmsmoo.com/upload/simuIcon/20191030093450972796.png"></image></view>
            <view class="member-central">签到</view>
        </view>
    </view>
    <view class="nav-mid-box" bindtap="toPoints">
        <view class="nav-mid">距离下一等级还差4400积分</view>
        <view class="my-prog">
            <progress color="#FF4439" percent="30" border-radius="25" stroke-width="10rpx"></progress>
            <view class="prograss-img"><image src="https://img.xmsmoo.com/upload/simuIcon/20191030093117625091.png"></image></view>
        </view>
        <view class="nav-bottom">
            <view class="nav-bottom-item">
                <view class="nav-itemGrade">{{member.memberLevelName}}</view>
                <view class="nav-itemMark">600</view>
            </view>
            <view class="nav-bottom-item">
                <view class="nav-itemGrade">白金会员</view>
                <view  class="nav-itemMark">1000</view>
            </view>
        </view>
    </view>

</view>


