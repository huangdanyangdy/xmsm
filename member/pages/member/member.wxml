                <view class="rights-tit">积分加价购</view>
            </view>
            <view class="rights-item">
                <view class="rights-img"><image src="https://img.xmsmoo.com/upload/simuIcon/20191030093841104347.png"></image></view>
                <view class="rights-tit">新手特权</view>
            </view>
            <view class="rights-item">
                <view class="rights-img"><image src="https://img.xmsmoo.com/upload/simuIcon/20191030093855124748.png"></image></view>
                <view class="rights-tit">会员礼包</view>
            </view>
            <view class="rights-item">
                <view class="rights-img"><image src="https://img.xmsmoo.com/upload/simuIcon/20191030093911570940.png"></image></view>
                <view class="rights-tit">生日特权</view>
            </view>
            <view class="rights-item">
                <view class="rights-img"><image src="https://img.xmsmoo.com/upload/simuIcon/20191030093930217131.png"></image></view>
                <view class="rights-tit">专享礼包</view>
            </view>
            <view class="rights-item">
                <view class="rights-img"><image src="https://img.xmsmoo.com/upload/simuIcon/20191030093943904021.png"></image></view>
                <view class="rights-tit">物美特惠</view>
            </view>
            <view class="rights-item">
                <view class="rights-img"><image src="https://img.xmsmoo.com/upload/simuIcon/20191030093957617816.png"></image></view>
                <view class="rights-tit">周年礼包</view>
            </view>
            <view class="rights-item">
                <view class="rights-img"><image src="https://img.xmsmoo.com/upload/simuIcon/20191030094018195332.png"></image></view>
                <view class="rights-tit">活动尊享</view>
            </view>
        </view>
    </view>
<!--    会员优选========-->
    <view class="member-mid">
        <view class="well-choose">
            <view class="well-tit">会员优选</view>
            <view class="view-more">
                <view class="more-txt">查看更多</view>
                <view class="more-icon"> > </view>
            </view>
        </view>
        <view class="choose-container">
            <view class="choose-item" ><image src="https://img.xmsmoo.com/upload/simuIcon/20191030094044044058.png"></image></view>
            <view class="choose-item" ><image src="https://img.xmsmoo.com/upload/simuIcon/20191030094131826193.png"></image></view>
            <view class="choose-item" ><image src="https://img.xmsmoo.com/upload/simuIcon/20191030094147925997.png"></image></view>
        </view>
    </view>
</view>
