
page {
    background: #f6f6f6;
}

.wrap {
    position: relative;
    width: 100%;
    box-sizing: border-box;
    font-size: 30rpx;
}.goods-list1 {
    width: 100%;
    box-sizing: border-box;
    background: #ffffff;
}

.goods-item1 {
    display: flex;
    align-items: center;
    padding-left: 20rpx;
    width: 100%;
    height: 310rpx;
    box-sizing: border-box;
}

.goods-img1,
.goods-img1 image {
    flex: 0 0 auto;
    overflow: hidden;
    width: 250rpx;
    height: 250rpx;
    border-radius: 5px;
    margin-right: 10rpx;
}

.goods-item1-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 30rpx 20rpx;
    height: 100%;
    border-bottom: 1rpx solid #dddddd;
    box-sizing: border-box;
}

.goods-name1 {
    font-size: 26rpx;
    line-height: 36rpx;
}

.goods-offers1 {
    display: flex;
    align-content: center;
    margin-bottom: 20rpx;
}
.goods-offers-item {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12rpx;
    padding: 0 8rpx;
    height: 32rpx;
    font-size: 20rpx;
    border: 1px solid rgba(213, 49, 40, 1);
    border-radius: 5rpx;
    color: rgba(213, 49, 40, 1);
}

.goods-list1>.goods-item1:last-of-type .goods-item1-right {
    border: 0
}
.goods-price-old {
    font-size: 24rpx;
    color: #B3B3B3;
    line-height: 1;
    text-decoration: line-through;
}
.goods-prices {
    flex: 0 0 auto;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    box-sizing: border-box;
}
.goods-prices-right{
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  width: 60rpx;
  height: 60rpx;
}
.goods-prices-right image{
   width: 40rpx;
  height: 40rpx;
}

.goods-prices-left {
    display: flex;
    align-items: flex-end;
}

.goods-price-now {
    display: flex;
    align-items: flex-end;
    font-weight: bold;
    color: rgba(255, 73, 46, 1);
    font-size: 32rpx;
    line-height: 1;
    margin-right: 20rpx;
}

.goods-price-now>p:first-of-type {
    font-size: 24rpx;
}

.goods-price-now>p:last-of-type {
    margin-left: 5rpx;
}

.goods-price-old {
    font-size: 24rpx;
    color: #B3B3B3;
    line-height: 1;
    text-decoration: line-through;
}
