/*  */
page{
    background: #F2F2F2;
	
}
.wrap {
	width: 100%;
	box-sizing: border-box;
	font-size: 28rpx;
}
.contents {
	width: 100%;
	box-sizing: border-box;
}
.goods-list {
    padding: 40rpx 20rpx;
    width: 100%;
    box-sizing: border-box;
    background: #ffffff;
	margin-bottom: 20rpx;
}

.goods-item {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    width: 100%;
    height: 180rpx;
    box-sizing: border-box;
    line-height: 1;
}

.goods-list>.goods-item:last-of-type {
    margin: 0;
}

.goods-img {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
}

.goods-img image {
    width: 180rpx;
    height: 180rpx;
}

.goods-item-right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
    height: 100%;
    margin-left: 20rpx;
    box-sizing: border-box;
}

.goods-item-right-top {
    width: 100%;
    box-sizing: border-box;
}

.goods-specs {
    display: flex;
    align-items: center;
    font-weight: 600;
}

.goods-name {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    line-height: 34rpx;
    font-weight: 500;
}

.goods-specs {
    font-size: 26rpx;
    color: #777777;
}

.goods-item-right-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    line-height: 1;
}

.goods-price {
    font-size: 28rpx;
    font-weight: 800;
}

.goods-num {
    font-size: 26rpx;
    color: #777777;
}
/*  */
/* else */
.spell-msg {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
	padding-top: 10rpx;
	padding-bottom: 40rpx;
	width: 100%;
	height: 400rpx;
	box-sizing: border-box;
	background: #FFFFFF;
	font-size: 34rpx;
}
.spell-time {
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 10rpx;
	width: 160rpx;
	height: 40rpx;
  border-radius: 5rpx;
	color: #8B8B8B;
	font-size: 26rpx;
	background: #f3f3f3;
	box-sizing: border-box;
}
.spell-time::after {
	position: absolute;
	left:35rpx;
	top:-10rpx;
	display: block;
	width: 2rpx;
	height: 10rpx;
	content: '\200b';
	background: #f3f3f3;
}
.spell-time>p::after{
	position: absolute;
	right:35rpx;
	top:-10rpx;
	display: block;
	width: 2rpx;
	height: 10rpx;
	content: '\200b';
	background: #f3f3f3;
}
.spell-mens {
	display: flex;
	align-items: center;
}
.spell-mens spand {
	color: red;
}
.spell-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 650rpx;
	height: 90rpx;
	border-radius: 5rpx;
}
.spell-btn0 {
	background: #FC2E22;
	color: #FFFFFF;
	font-size: 30rpx;
}
.spell-btn1 {
	border: 1rpx solid #FF4439;
	color: #FF4439;
	font-size: 30rpx;
}
/* content if */
 .spell-content {
	 position: relative;
	 display: flex;
	 flex-direction: column;
	 align-items: center;
	 justify-content: space-between;
	 padding-top: 30rpx;
	 padding-bottom: 5rpx;
	 width: 100%;
	 height: 368rpx;
	 background: #FFFFFF;
	 box-sizing: border-box;
 }
 /*  */
 .men-imgs {
	 display: flex;
	 
 }
 .men-img {
	 width: 90rpx;
	 height: 90rpx;
	 border-radius: 50rpx;
	
 }
 .men-last {
	 position: relative;
	 display: flex;
	 align-items: center;
	 justify-content: center;
	 margin-left:30rpx;
	 color: #8f8f8f;
	 font-size: 40rpx;
	 box-sizing: border-box;
	 border: 1rpx dashed #8f8f8f;
 }
 .men-main {
	 position: relative;
	 border: 2rpx solid #FF4439;
 }
 .men-img image{
	 position: relative;
	 overflow: hidden;
	 width: 90rpx;
	 height: 90rpx;
	 border-radius: 50rpx;
	 z-index: 1;
 }
 .men-main::after{
	 position: absolute;
	 right: 50%;
	 top: -5rpx;
	 display: flex;
	 align-items: center;
	 justify-content: center;
	 width: 55rpx;
	 height: 30rpx;
	 content: '拼主';
	 color: #FFFFFF;
	 background: #FF4439;
		border-radius: 10rpx;
		font-size: 22rpx;
		border: 1rpx solid #FFFFFF;
		z-index: 9;
 } 
 .men-last::after {
	 position: absolute;
	 top: 30rpx;
	 left: 35rpx;
	 width: 0;
	 height: 0;
	 content: '?';
	 line-height: 0.8;
	 
 }
 .men-last image {
	 position: relative;
	 z-index: 2;
 }
 /*  */
 .spell-li {
	 color: #8F8F8F;
	 font-size: 26rpx;
 }
 .spell-places {
	 display: flex;
	 font-size: 32rpx;
 }
 .spell-places spand {
	 color: red;
 }
 .spell-places view {
	 margin-right: 15rpx;
 }
 /* 拼单规则 */
 .spell-planing {
	 display: flex;
	 align-items: center;
	 justify-content: space-between;
	 width: 100%;
	 height: 85rpx;
	 padding: 0 30rpx;
	 font-size: 28rpx;
	 background: #FFFFFF;
	border-bottom:1px solid #f2f2f2;  
	 box-sizing: border-box;
 }
 .planing-title {
	 font-size: 32rpx;
 }
 .planing-msg {
	 display: flex;
	 align-items: center;
	 font-size: 28rpx;
	 color: #8E8E8E;
 }
 .order-text>p{
	 margin-right: 10rpx;
 }
 .right-icol {
	 transform: scaleY(1.5);
	 transform-origin: right 20rpx; 
	 line-height: 1;
 }
 /*  */
 .spell-content-else {
	 display: flex;
	 align-items: center;
	 flex-direction: column;
	 background: #FFFFFF;
	 margin-top: 20rpx;
 }
 .men-imgs-else {
	 display: flex;
	 justify-content: center;
	 align-items: center;
	 width: 100%;
	 height: 168rpx;
	 box-sizing: border-box;
 }
 /*  */
 .goods-box {
	 width: 100%;
	 box-sizing: border-box;
 }
 .goods-box-top {
	 position: relative;
	 display: flex;
	 align-items: center;
	 justify-content: center;
	width: 100%;
	height: 125rpx;
	font-size: 32rpx;
	box-sizing: border-box;
 }
 .goods-box-top::before{
	 position: relative;
	 content: '';
	 width: 50rpx;
	 height: 3rpx;
	 margin-right: 30rpx;
	 background: #b6b6b6;
 } 
  .goods-box-top::after{
 	 position: relative;
 	 content: '';
 	 width: 50rpx;
 	 height: 3rpx;
 	 margin-left: 30rpx;
 	 background: #b6b6b6;
 } 
.goods-box .goods-lists {
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    flex-wrap: wrap;
    width: 100%;
    box-sizing: border-box;
}

.goods-box .goods-item {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    overflow: hidden;
    width: 345rpx;
    height: 520rpx;
    background: #ffffff;
    border-radius: 8px;
    margin-bottom: 20rpx;
}

.goods-box .goods-msg {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    padding: 0 12rpx;
    padding-bottom: 20rpx;
    box-sizing: border-box;
}

.goods-box .goods-img,
.goods-box .goods-img image {
    flex: 0 0 auto;
    width: 345rpx;
    height: 345rpx;
}

.goods-box .goods-name {
    flex: 0 0 auto;
    font-size: 26rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-weight: 400;
}

.goods-box .goods-offers {
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;
    width: inherit;
    margin-top: -20rpx;
    font-size: 24rpx
}

.goods-box .goods-offers-item {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12rpx;
    padding: 0 8rpx;
    height: 32rpx;
    font-size: 20rpx;
    border: 1px solid rgba(213, 49, 40, 1);
    border-radius: 5rpx;
    color: rgba(213, 49, 40, 1);
}
.goods-box .goods-offers-msg{
  line-height: 30rpx;
  color: #d5302a;
  font-size: 26rpx;
  }

.goods-box .goods-prices {
    flex: 0 0 auto;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    box-sizing: border-box;
}

.goods-box .goods-prices-left {
    display: flex;
    align-items: flex-end;
}

.goods-box .goods-price-now {
    display: flex;
    align-items: flex-end;
    font-weight: bold;
    color: rgba(255, 73, 46, 1);
    font-size: 32rpx;
    line-height: 1;
    margin-right: 20rpx;
}

.goods-box .goods-price-now>p:first-of-type {
    font-size: 24rpx;
}

.goods-box .goods-price-now>p:last-of-type {
    margin-left: 5rpx;
}

.goods-box .goods-price-old {
    font-size: 24rpx;
    color: #B3B3B3;
    line-height: 1;
    text-decoration: line-through;
}

